doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')

        title= title

        block styles
            link(rel="stylesheet" href="/material.css")
            link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
            link(rel='stylesheet', href='https://code.getmdl.io/1.3.0/material.indigo-pink.min.css')
            link(rel="stylesheet" href="/style.css")

    body
        block header
            .mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
                header.mdl-layout__header
                    .mdl-layout__header-row.project_navbar
                        .mdl-layout-spacer
                        a.mdl-navigation__link.mdl-layout-title.project_navbar__title(href='/') InfoShop
                        form(action='/search')
                            .mdl-textfield.mdl-js-textfield.mdl-textfield--expandable.project_search.mdl-textfield--floating-label.mdl-textfield--align-right.mdl-search_field--mobile-with
                                input#fixed-header-drawer-exp.mdl-textfield__input(type='text', name='search').project__text_input
                                button.mdl-button.mdl-js-button.mdl-button--icon(for='fixed-header-drawer-exp',type='submit')
                                    .icon
                                        i.material-icons searchs

                        button#demo-menu-lower-right.mdl-button.mdl-js-button.mdl-button--icon
                            i.material-icons more_vert
                        ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect(for='demo-menu-lower-right')
                            if authUser
                                a.mdl-menu__item.mdl-navigation__link--popup-menu(href='/about/info') About
                                a.mdl-menu__item.mdl-navigation__link--popup-menu(href='/profile/user') Profile
                                a.mdl-menu__item.mdl-navigation__link--popup-menu(href='/logout/form') Log out
                            else
                                a.mdl-menu__item.mdl-navigation__link--popup-menu(href='/login/form') Sign in
                                a.mdl-menu__item.mdl-navigation__link--popup-menu(href='/register/form') Sign up
                .mdl-layout__drawer
                    span.mdl-layout-title Category
                    nav.mdl-navigation
                        a.mdl-navigation__link(href='/category/scienstic') Scienstic
                        a.mdl-navigation__link(href='/category/universe') Universe
                        a.mdl-navigation__link(href='/category/money') Money
                main.mdl-layout__content.project_card-container
                    block content
        include scripts.pug
