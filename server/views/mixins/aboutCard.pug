include cargo-commentary

mixin aboutCard(cargo)
        main
            .demo-container.mdl-grid
                .mdl-cell.mdl-cell--2-col.mdl-cell--hide-tablet.mdl-cell--hide-phone
                .demo-content.mdl-color--white.content.mdl-color-text--grey-800.mdl-cell.mdl-cell--12-col
                    .demo-crumbs.mdl-color-text--grey-500
                    h3=cargo.title
                    p=cargo.description
                    .commentary-container
                        a.mdl-navigation__link(href=`/cargos/add_commentary/${cargo.id}`)
                            button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored
                                | Add commentary
                    if cargo.commentaries
                        +cargo-commentary(cargo.commentaries)
