include project-commentary

mixin contentForm(form,titleName, titleText)
    .mdl-layout.mdl-js-layout.mdl-color--grey-100
        main.mdl-layout__content.mdl-grid
            .mdl-card.mdl-shadow--6dp.mdl-cell.mdl-cell--12-col.login_form
                .mdl-card__title.mdl-color--primary.mdl-color-text--white
                    h2.mdl-card__title-text Add Commentary
                .mdl-card__supporting-text
                    form(method='POST')
                        .mdl-textfield.mdl-js-textfield.commentary__form-field
                            input#username.mdl-textfield__input(type='text',name='title')
                            label.mdl-textfield__label(for='username') Title
                        .mdl-textfield.mdl-js-textfield.commentary__form-field
                            textarea#sample5.mdl-textfield__input(type='text', rows='3', name='text')
                            label.mdl-textfield__label(for='sample5') Commentary
                        button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(type='submit')
                            | OK

